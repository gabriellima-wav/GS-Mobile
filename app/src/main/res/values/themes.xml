<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cor primária usada na barra de aplicativos e outros elementos -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <!-- Cor secundária usada em botões e componentes de destaque -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- Cor de fundo da atividade -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- Cor de destaque -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Personalize outras cores se necessário -->
    </style>

    <style name="Theme.GSMobile" parent="Base.Theme.GSMobile" />
</resources>
